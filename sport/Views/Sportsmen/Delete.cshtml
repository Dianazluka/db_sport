@model sport.Models.Sportsman

@{
    ViewBag.Title = "Удалить";
}


<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.surname)
        </dd>

        <dt>
            Возраст
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
          Адрес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
           Телефон
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
           Рост
        </dt>

        <dd>
            @Html.DisplayFor(model => model.growth)
        </dd>

        <dt>
         Вес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.weight)
        </dd>

        <dt>
           Достижение
        </dt>

        <dd>
            @Html.DisplayFor(model => model.achievement)
        </dd>

        <dt>
            Название секции
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.section_name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к записям", "Index")
        </div>
    }
</div>
